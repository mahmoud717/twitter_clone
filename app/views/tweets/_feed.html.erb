<div class="col-6">
    <h5 class="mt-4 mb-2">Tweet about it! </h5>
    <%= render "form" %>

    <% @tweets.each do |tweet| %>
    <div class="media">
        <div class="profile-image">
            <%= gravatar_image_tag(tweet.user.email , alt: tweet.user.name) %>
        </div>
        <div class="tweet">
            <strong>
                <%=tweet.user.name.capitalize!%>
            </strong><br>
            <small>
                @<%=tweet.user.username%>
            </small>
            <p class="py-3"><%=tweet.tweet%></p>
            <% if tweet.user == current_user%>
            <div class="tweet-actions">
                <%= link_to edit_tweet_path(tweet) , class: "edit-link mx-1" do%>
                <i class="fa fa-pencil"></i>
                <% end %>
                <%= link_to tweet, method: :delete, data: {confirm:"Are you sure you want to delete this tweet?"}, class: "delete-link mx-1" do%>
                <i class="fa fa-trash-o"></i>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
    <% end %>
</div>